<h1>Here are our costumes</h1>

<% @costumes.each do |costume| %>
  <div class="card-trip">
    <%= cl_image_tag("https://unsplash.com/photos/aQSPWSxCweY",width: 400, height: 300, crop: :fill) %>
    <div class="card-trip-infos">
      <div>
        <h2><%= costume.name %></h2>
        <p><%= costume.address %></p>
        <p><%= costume.description %></p>
      </div>
      <h2 class="card-trip-pricing"><% costume.price_per_day %></h2>
      <img src="https://kitt.lewagon.com/placeholder/users/krokrob" class="card-trip-user avatar-bordered" />
    </div>
  </div>
<% end %>
