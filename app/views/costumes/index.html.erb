<h1>Here are our costumes</h1>

<% @costumes.each do |costume| %>
  <div class="card-trip">
    <%= link_to cl_image_tag("joey-nicotra-aQSPWSxCweY-unsplash_wziuyz.jpg",width: 200, height: 300, crop: :fill), costume_path(costume) %>
    <div class="card-trip-infos">
      <div>
        <h2><%= link_to costume.name, costume_path %></h2>
        <p><%= costume.address %></p>
        <p><%= costume.description %></p>
      </div>
      <h2 class="card-trip-pricing"><% costume.price_per_day %></h2>
      <img src="https://kitt.lewagon.com/placeholder/users/krokrob" class="card-trip-user avatar-bordered" />
    </div>
  </div>
<% end %>
